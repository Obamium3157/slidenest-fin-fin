{
  "extends": ["stylelint-config-standard"],
  "plugins": ["stylelint-order"],
  "rules": {
    "order/properties-alphabetical-order": null,
    "selector-class-pattern": [
      "^[a-z][a-zA-Z0-9_-]+$",
      {
        "message": "Class names should be in kebab-case or camelCase."
      }
    ]
  }
}
